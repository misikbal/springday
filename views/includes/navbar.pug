.site-navbar-wrap(class=(active.isNavbar ? "sticky-wrapper is-sticky" : "")).translate
    if active.contactnavbar_isActive

        #top.site-navbar-top(style="font-size:13px;")
            .container
                .row.align-items-center
                    .col-6
                        .d-flex.mr-auto
                            if social.linkedin!==""                        

                                a.d-flex.align-items-center.mr-4(href=`mailto:${social.mail}` target='_blank' style="text-decoration: none")
                                    span.mr-2
                                        i.far.fa-envelope
                                    span.d-none.d-md-inline-block #{social.mail}
                            if social.phone!==""                        
                            
                                a.d-flex.align-items-center.mr-auto(href=`tel://+${social.phone}` target='_blank' style="text-decoration: none")
                                    span.mr-2
                                        i.fas.fa-phone
                                    span.d-none.d-md-inline-block #{social.phone}
                    .col-6.text-right
                        .mr-auto
                            if social.facebook!==""
                                a.p-2.pl-0(href=`${social.facebook}` target='_blank')
                                    span.fab.fa-facebook       
                            if social.twitter!==""                        
                                a.p-2.pl-0(href=`${social.twitter}` target='_blank' )
                                    span.fab.fa-twitter
                            if social.instagram!==""  
                                a.p-2.pl-0(href=`${social.instagram}` target='_blank')
                                    span.fab.fa-instagram
                            if social.youtube!==""      
                                a.p-2.pl-0(href=`${social.youtube}` target='_blank')
                                    span.fab.fa-youtube
                            if social.linkedin!==""                        
                            
                                a.p-2.pl-0(href=`${social.linkedin}` target='_blank')
                                    span.fab.fa-linkedin

    #sticky-wrapper
        #navbar_top
            #lightcolor.site-navbar.site-navbar-target.js-sticky-header
                .container
                    .row
                        .col-12             

                            nav.navbar.navbar-expand-lg.site-navigation
                                a(href='/')
                                    img.card-image(src=`/img/resized/${logo.logo}` width="150px" )
                                button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                                    span.navbar-toggler-icon
                                        i.fas.fa-bars.mt-1

                                
                                #navbarSupportedContent.collapse.navbar-collapse
                                    ul.navbar-nav.ml-auto.py-4.py-md-0
                                        if page.home!="" && page.home_isActive
                                            li(class=(path==='/'?'active':'') ).pl-4.pl-md-0.ml-0.ml-md-4.nav-item
                                                a(href="/").nav-link !{page.home}

                                        if page.products!="" && page.products_isActive
                                                
                                            li(class=(path==='/products'?'active':'')).dropdown.megamenu-li.pl-4.pl-md-0.ml-0.ml-md-4
                                                    a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='true' delay=5000)
                                                        | !{page.products}
                                                    .dropdown-menu.megamenu.bg-light(aria-labelledby='navbarDropdown' style="opacity:0.95; height:auto; overflow:auto;")
                                                        .row.mb-3
                                                            .col-12
                                                                a.dropdown-item(href='/products')
                                                                    p Tüm Ürünler
                                                                hr
                                                        .row
                                                            .col-12

                                                                p.h3 Kategoriler
                                                                hr
                                                                .row
                                                                    each menucategories in menucategory
                                                                        .col-4.text-center
                                                                            a.dropdown-item(href=`/categories/${menucategories._id}`).nav-link

                                                                                img(src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" data-src=`/img/resized/${menucategories.categoryImg}` alt="").w-25.deneme.card-img-top
                                                                                
                                                                                p #{menucategories.name}
                                        //- li(class=(path==='/admin/categories' ? 'active':''))
                                        if page.services!="" && page.services_isActive
                                        
                                            li(class=(path===('/aboutservices') ? 'active':'')).nav-item.pl-4.pl-md-0.ml-0.ml-md-4.nav-item
                                                a(href="/aboutservices").nav-link !{page.services}
                                        if page.about!="" && page.about_isActive
                                            li(class=(path==='/about'?'active':'')).dropdown.megamenu-li.pl-4.pl-md-0.ml-0.ml-md-4
                                                a#about.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='false' aria-expanded='false' delay=5000)
                                                    | !{page.about}
                                                .dropdown-menu.megamenu.bg-light(aria-labelledby='about' style="opacity:0.95; height:auto;")
                                                    .row.mb-3
                                                        .col-12
                                                            a.dropdown-item(href='/about')
                                                                p Hakkımızda
                                                            hr
                                                    .row
                                                        each about in footerabouts
                                                            .col-4.text-center
                                                                a.dropdown-item(href=`/about/${about._id}`)                                                                               
                                                                    
                                                                    p !{about.name}
                                                                    
                                        if page.project!="" && page.project_isActive
                                        
                                            li(class=(path==='/project'?'active':'')).pl-4.pl-md-0.ml-0.ml-md-4.nav-item
                                                a(href="/project").nav-link !{page.project}
                                        if page.client!="" && page.client_isActive
                                        
                                            li(class=(path==='/client'?'active':'')).pl-4.pl-md-0.ml-0.ml-md-4.nav-item
                                                a(href="/client",class=(path==='/client'?'active nav-link':'nav-link')).nav-link !{page.client}
                                        if page.contact!="" && page.contact_isActive
                                        
                                            li(class=(path==='/contactus'?'active':'')).pl-4.pl-md-0.ml-0.ml-md-4.nav-item
                                                a(href="/contactus",class=(path==='/contactus'?'active nav-link':'nav-link')).nav-link !{page.contact}
                                        if page.blog!="" && page.blog_isActive
                                        
                                            li(class=(path==='/news'?'active':'')).pl-4.pl-md-0.ml-0.ml-md-4.nav-item
                                                a(href="/news",class=(path==='/news'?'active nav-link':'nav-link')).nav-link !{page.blog}
                                        if isAuthenticated
                                                if page.user!="" && page.user_isActive
                                                
                                                    li(class=(path==='/orders'?'active':'')).nav-item.pl-4.pl-md-0.ml-0.ml-md-4
                                                        a.nav-link.dropdown-toggle(data-toggle='dropdown' href='#' role='button' aria-haspopup='true' aria-expanded='false') 
                                                            span
                                                                | !{page.user}
                                                        .dropdown-menu.bg-light
                                                            if active.ecommarce_isActive
                                                                a.dropdown-item(href='/orders') SİPARİŞLERİM
                                                            //- a.dropdown-item(href='#') AYARLAR
                                                            hr.dropdown-divider
                                                            a.dropdown-item(href='/logout') ÇIKIŞ
                                                if active.ecommarce_isActive 
                                                    if page.cart!="" && page.cart_isActive
                                                        li(class=(path==='/cart'?'active':'')).nav-item.pl-4.pl-md-0.ml-0.ml-md-4
                                                            a.nav-link.cart.position-relative.d-inline-flex(href="/cart",class=(path==='/cart'?'active nav-link':'nav-link') aria-label='View your shopping cart')
                                                                span
                                                                    | !{page.cart}

                                        else if !isAuthenticated
                                            li(class=(path==='/login'?'active':'')).pl-4.pl-md-0.ml-0.ml-md-4
                                                a.nav-link(href="/login") GİRİŞ
                                        if isAdmin || isLimited
                                            li.pl-4.pl-md-0.ml-0.ml-md-4
                                                a(href="/admin/").nav-link
                                                    i.fas.fa-tachometer-alt
                                        if active.translate_isActive
                                            li.pl-4.pl-md-0.ml-0.ml-md-4.pt-1
                                                .dropdown.show
                                                    button#link.btn.btn-outline-info.btn-sm.dropdown-toggle(role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                                                        | DİL
                                                    .dropdown-menu(aria-labelledby='link' style="overflow:scrollLeft").bg-light.text-center
                                                        .row
                                                            each langs in lang
                                                                .col
                                                                    a.dropdown-item.gflag.nturl(onclick=`doGTranslate('${system.language}|${langs.value}');return false;` title=`${langs.lang}` )
                                                                    
                                                                        //- img(src=`/img/resized/${langs.imageUrl}` height='30' width='30' alt='Turkish').text-start
                                                                        p(stlye="font-size:10px;") #{langs.lang}
                                        if active.darkmode_isActive
                                            li.pl-4.pl-md-0.ml-0.ml-md-4.pt-1.text-center
                                                .switch
                                                    i.fas.fa-adjust
                                                    div
                                                        input(type="checkbox")
                                                        span.slider.round.bg-light
                                        


        if action!=="undefined" && action==="insert"
            .row.d-flex.justify-content-center
                .col-md-3
                    .text-center
                        .alert.alert-success.show.mt-3
                            strong Ürün Başarılı Bir Şekilde Sepetinize Eklendi
        script.
            window.setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function(){
                    $(this).remove(); 
                });
            }, 3000);
