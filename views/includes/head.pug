head
      meta(charset='UTF-8')
      meta(http-equiv='X-UA-Compatible' content='IE=Edge')
      meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
      meta(http-equiv='content-language' content='tr')     
      meta(name='robots' content='follow')
      meta(name='”robots”' content='”max-snippet:-1″')
      meta(name='”robots”' content='”max-image-preview:large”')
      meta(name='googlebot' content='index')
      meta(name='googlebot-news' content='index')
      meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
      
      meta(content=`${system.description}` name='description')
      meta(content=`${system.tags}` name='keywords')
      meta(property='og:locale' content='tr_TR')
      meta(property='og:type' content='article')
      meta(property='og:url' content=`${system.siteUrl}`)
      meta(property='og:site_name' content=`${title}`)

      meta(property='article:section' content='Shop')
      meta(property='og:updated_time' content=`${system.date}`)
      meta(property='og:image:width' content='400')
      meta(property='og:image:height' content='400')
      meta(property='og:image:type' content='image/webp')
      link(type="image/x-icon" rel='shortcut icon' href=`/img/resized/${logo.favico}`)
      link(rel='alternate' hreflang='x-default' href='/')

      script(type="text/javascript").
                                    function link(url) {
                                    var s = document.createElement('link');
                                    s.type = 'text/css';
                                    s.rel = 'stylesheet';
                                    s.async = true;
                                    s.href = url;
                                    var x = document.getElementsByTagName('head')[0];
                                    x.appendChild(s);
                                    }
      script(type="text/javascript").
            link('https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' )
            link("https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css")
            link('https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css' )
            link("/css/style.min.css")
            link( '/css/themes/nav/owl.carousel.min.css')
            
      script(async src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
      
      script.
            let root=document.documentElement.style
            root.setProperty('--navbarLight', `!{theme.navbarLight}`);
            root.setProperty('--navbarDark', `!{theme.navbarDark}`);
            root.setProperty('--infoLight', `!{theme.infoLight}`);
            root.setProperty('--infoDark', `!{theme.infoDark}`);
            root.setProperty('--cardLight', `!{theme.cardLight}`);
            root.setProperty('--cardDark', `!{theme.cardrDark}`);
            root.setProperty('--bodyLight', `!{theme.bodyLight}`);
            root.setProperty('--bodyDark', `!{theme.bodyDark}`);
            root.setProperty('--footerLight', `!{theme.footerLight}`);
            root.setProperty('--footerDark', `!{theme.footerDark}`);
      span !{system.googleAnalitcs}

      block styles



      title #{title}