head
      title #{title}
      meta(charset='UTF-8')
      meta(http-equiv='X-UA-Compatible' content='IE=Edge')
      //- meta(http-equiv='Cache-Control' content='no-cache, no-store, must-revalidate')
      //- meta(http-equiv='Pragma' content='no-cache')
      //- meta(http-equiv='Expires' content='0')
      meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
      //- meta(http-equiv="Content-Security-Policy" content="script-src 'none'")
      meta(name="google-site-verification" content="MDH-eoiwsgB9zBwOm_Yqfj-z54sMW3xyF1Gs8BKGla8")
      meta(http-equiv='content-language' content=`${system.language}`)     
      meta(name='robots' content='follow')
      meta(name='”robots”' content='”max-snippet:-1″')
      meta(name='”robots”' content='”max-image-preview:large”')
      meta(name='googlebot' content='index')
      meta(name='googlebot-news' content='index')
      meta(content='width=device-width, initial-scale=1, maximum-scale=6' name='viewport')

      meta(name='description' content=`${system.description}`)
      meta(name='keywords' content=`${system.tags}`)
      meta(property='og:locale' content='tr_TR')
      meta(property='og:type' content='article')
      meta(property='og:url' content=`${system.siteUrl}`)
      meta(property='og:site_name' content=`${title}`)

      meta(property='article:section' content='Shop')
      meta(property='og:updated_time' content=`${system.date}`)
      meta(property='og:image:width' content='400')
      meta(property='og:image:height' content='400')
      meta(property='og:image:type' content='image/jpg')
      link(rel="alternate" hreflang="tr" href=`${system.siteUrl}`)
      link(type="image/x-icon" rel='shortcut icon' href=`/img/resized/${system.favico}`)

      script(type="text/javascript").
            function link(url) {
            var s = document.createElement('link');
            s.type = 'text/css';
            s.rel = 'stylesheet';
            s.async = true;
            s.href = url;
            var x = document.getElementsByTagName('head')[0];
            x.appendChild(s);
            }
      style.
            @import url("https://fonts.googleapis.com/css?family=Poppins:400&subset=devanagari,latin-ext&display=swap");

      script(type="text/javascript").
            link("/css/icomoon/icon.min.css")

            link('https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.1/css/bootstrap.min.css' )
            link("/css/style.min.css")   
            
            link("/plugins/animate-css/animate.min.css")
            
      script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer")
      script(async src='/js/lazy.min.js')
      script(type='text/javascript' rel="preload" ).
            let root=document.documentElement.style
            root.setProperty('--navbarLight', `!{system.navbarLight}`);
            root.setProperty('--navbarDark', `!{system.navbarDark}`);
            root.setProperty('--infoLight', `!{system.infoLight}`);
            root.setProperty('--infoDark', `!{system.infoDark}`);
            root.setProperty('--cardLight', `!{system.cardLight}`);
            root.setProperty('--cardDark', `!{system.cardrDark}`);
            root.setProperty('--bodyLight', `!{system.bodyLight}`);
            root.setProperty('--bodyDark', `!{system.bodyDark}`);
            root.setProperty('--footerLight', `!{system.footerLight}`);
            root.setProperty('--footerDark', `!{system.footerDark}`);
      span !{system.googleAnalitcs}
      link(data-href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css")
      link(data-href='/css/themes/nav/owl.carousel.min.css' rel='stylesheet')

      block styles


