extends ../layouts/main-layout.pug
include ../mixins/client.pug

block styles 
    //- if aboutservice.aboutservices.tags.length > 0
    meta(name='keywords' content=aboutservice.aboutservices.tags[0])
    meta(property='og:locale' content='tr_TR')
    meta(property='og:type' content='article')
    meta(property='og:url' content=`${system.siteUrl}/aboutservices/${aboutservice.url}`)
    meta(property='og:site_name' content=`${title}`)

    meta(property='article:section' content='Shop')
    meta(property='og:updated_time' content=`${aboutservice.date}`)
    meta(property='og:image:width' content='400')
    meta(property='og:image:height' content='400')
    meta(property='og:image:type' content='image/webp')

    meta(property="og:image" content=`${aboutservice.aboutservices.imageUrl}`)
    meta(property="og:title" content=`${aboutservice.aboutservices.name}`) 
    script(type='text/javascript').
        link('/css/aboutservicesdetails.css')
block content
    br
    br
    br
    br
    br
    br
    br

    .container
        .row
            .leftcolumn(style="overflow-x:auto;")
                .card.bg-light(style="border-top: 10px solid #0b5aa2;").text-center
                    h2.text-center.itemss-head #{aboutservice.aboutservices.name}
                    img.fakeimg(src=`/img/resized/${aboutservice.aboutservices.imageUrl}`).rounded.mx-auto.d-block
                    span#description.mt-3.p-3
                        | !{aboutservice.aboutservices.description}
                    script.
                        $("span#description img").addClass("deneme w-100 h-auto")
                        $("span#description p").addClass("text-justify text-muted")



            .rightcolumn
                br
                .itemss.bg-light
                    .itemss-head
                        h2.text-center DiÄŸer Hizmetler
                        hr
                    .itemss-body
                        each services in allaboutservices
                            .itemss-body-content                        
                                #card-hover
                                    a(href=`/aboutservices/${services.url}` class=services.url==selectedCategory?"list-group-item active":"list-group-item" style="text-decoration: none").bg-light
                                        |#{services.aboutservices.name}
                                        i.ml-3.icon-chevron-circle-right
    br
    br
    br
    +client(globalvalue)
