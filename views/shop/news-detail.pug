extends ../layouts/main-layout.pug
include ../mixins/client.pug

block styles
    meta(name='keywords' content=news.news.tags[0])
    meta(property='og:locale' content='tr_TR')
    meta(property='og:type' content='article')
    meta(property='og:url' content=`${system.siteUrl}/news/${news._id}`)
    meta(property='og:site_name' content=`${title}`)

    meta(property='article:section' content='Shop')
    meta(property='og:updated_time' content=`${news.news.date}`)
    meta(property='og:image:width' content='400')
    meta(property='og:image:height' content='400')
    meta(property='og:image:type' content='image/webp')

    meta(property="og:image" content=`${news.news.imageUrl}`)
    meta(property="og:title" content=`${news.news.name}`) 
    script(type='text/javascript').
        link('/css/aboutservicesdetails.css')


block content
    br
    br
    br
    br
    br
    .container
        .row
            .leftcolumn
                .card.bg-light(style="border-top: 10px solid #0b5aa2;")
                    h2.text-center.itemss-head #{news.news.title}
                    img.d-block.animated.w-100(alt=`${news.news.imageUrl}` src=`/img/resized/${news.news.imageUrl}` style="height:auto;")

                    span#description
                        |!{news.news.description}
                    script.
                        $("span#description img").addClass("w-100 h-auto border-right-0 rounded")
                        $("span#description p").addClass("text-justify text-muted")

            .rightcolumn
                br
                .itemss.bg-light
                    .itemss-head
                        h2.text-center DİĞER #{system.blog} YAZILARI 
                        hr
                    .itemss-body
                        if allnews.length>0
                            each newes in allnews
                                .itemss-body-content                        
                                    #card-hover
                                        a(href=`/news/${newes.url}` class=newes.url==selectedCategory?"list-group-item active":"list-group-item" style="text-decoration: none").bg-light
                                            |#{newes.news.title}
                                            i.fa.fa-angle-right
    br
    br
    br
    br
    +client(globalvalue)

