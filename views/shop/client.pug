extends ../layouts/main-layout.pug
include ../mixins/client.pug

block styles

    link(href='/css/project.css' rel='stylesheet')
block content
    if client.length>0
        br
        br
        br
        br
        br
        br

        header
            h1 #{system.client}
        .container
            .row
                each clients in client
                    .col-md-4.mb-5
                        .item-1(style="height:auto;").d-flex.justify-content-center
                            a.card(href=`${clients.client.link}` target="_blank" style="height:auto;").bg-light
                                img.deneme.w-75.h-auto(src=`/img/resized/${clients.client.clientlogo}` style="margin-left: auto; margin-right: auto").mt-2
                                article
                                    h1 #{clients.client.name}
                                    p #{clients.client.description}
    br
    br
    br