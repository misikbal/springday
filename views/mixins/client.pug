mixin client(client)
    section#clients.clients(style="margin-top:10rem;")
        h2.mb-4.text-center Referanslar
        .container(data-aos='zoom-in')
            .clients-slider.swiper
                .swiper-wrapper.align-items-center.mb-5
                    each clients in client
                            .swiper-slide
                                img.img-fluid.deneme(data-src= `/img/resized/${clients.clientlogo}` alt='')
                .swiper-pagination