extends ../layouts/main-layout.pug
block styles
    meta(name='robots' content='noindex')
    meta(name='google' content='nositelinkssearchbox')
    link(rel="stylesheet" href="/css/login.css")
block content
        form(action="/register" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)                       
            .section
                .container
                    .row.full-height.justify-content-center
                        .col-12.text-center.align-self-center.py-5
                            .section.pb-5.pt-5.pt-sm-2.text-center
                                .card-3d-wrap.mx-auto
                                    .card-3d-wrapper
                                        .card-front
                                            .center-wrap
                                                .section.text-center
                                                    h4.mb-4.pb-3 Kaydol
                                                    if errorMessage
                                                        div.alert.alert-danger.col-sm-12 !{errorMessage} 
                                                    .form-group
                                                        i.fas.fa-user
                                                        .mb-2                                                        
                                                        input#name.form-style(type='text' name='name' placeholder='Ad Soyad'  required oninvalid="this.setCustomValidity('Lüften Ad Soyad Alanını Boş Bırakmayınız')" oninput="this.setCustomValidity('')").form-control
                                                    .form-group.mt-2
                                                        i.fas.fa-envelope
                                                        .mb-2
                                                        input#email.form-style(type='email' name='email' placeholder='Email'  required oninvalid="this.setCustomValidity('Lüften Email Alanını Boş Bırakmayınız')" oninput="this.setCustomValidity('')").form-control
                                                        i.input-icon.uil.uil-at
                                                    .form-group.mt-2
                                                        i.fas.fa-lock
                                                        .mb-2
                                                        input#password.form-style(type='password' name='password' placeholder='Şifre'  required oninvalid="this.setCustomValidity('Lüften Şifre Alanını Boş Bırakmayınız')" oninput="this.setCustomValidity('')").form-control
                                                        i.input-icon.uil.uil-lock-alt
                                                    .form-group
                                                        .row
                                                            .col-md-7
                                                                a(href="/login").btn.btn-primary.mt-4.mb-3 Giriş Ekranına Dön
                                                            .col-md-5
                                                                input(type="submit" value="Kaydol").btn.btn-primary.mt-4
                                                            