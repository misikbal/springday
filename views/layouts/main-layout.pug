        include ../includes/navbar.pug

        if system.loadingisActive
            #yukleniy.hbne.hghd(style=`background-color:#fff;width:100%;height:100%;padding-top:25%; `)
                center
                    a(href="#" target='_blank' rel="noopener" style='background-color:transparent;border:none;padding:0px;margin:0px;' title="Yükleniyor")
                        if system.loadingLogo.toString().split(" ")[0].split("-")[0]=="spinner"
                            div(class=`${system.loadingLogo}` role='status' style="width: 3rem; height: 3rem;")
                        else
                            
                            img(style='padding:0px;margin:0px;background-color:transparent;border:none; width:7rem;' src=`${baseloading}`  _fcksavedurl=`/img/${baseloading}`)
                    br
                    br
                    
                    p #{system.loadingtext}
