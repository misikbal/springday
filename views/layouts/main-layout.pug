            let root=document.documentElement.style
            root.setProperty('--navbarLight', `!{system.navbarLight}`);
            root.setProperty('--navbarDark', `!{system.navbarDark}`);
            root.setProperty('--infoLight', `!{system.infoLight}`);
            root.setProperty('--infoDark', `!{system.infoDark}`);
            root.setProperty('--cardLight', `!{system.cardLight}`);
            root.setProperty('--cardDark', `!{system.cardrDark}`);
