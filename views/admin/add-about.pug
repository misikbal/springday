extends ../layouts/admin-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")
    link(href='/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css' rel='stylesheet')
    script.jsbin(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(src="/plugins/ckeditor/ckeditor.js")


block content
    
    if errorMessage
        div.alert.alert-danger.col-sm-7 !{errorMessage}
    form(action="/admin/add-about" method="POST" enctype="multipart/form-data")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)  
        .row.clearfix
            .col-md-12
                .form-group.row
                    .col-sm-12
                        .card.text-center.bg-blue-grey
                            .header
                                h2.text-white
                                    | BİLGİ EKLEME SAYFASI 
        .row.clearfix
            .col-md-2
                .card.bg-light.text-center
                    .body
                        .form-group
                            label.form-check-label.mb-5 Aktif
                            .form-check.form-switch.d-flex.justify-content-center
                                input.form-check-input.mt-auto.p-2.bd-highlight#isActive(type="checkbox" name="isActive")
            .col-md-10
                .form-group.row
                    .col-sm-12
                        .card.text-center.bg-blue-grey
                            .header.bg-white
                                h2
                                    | BİLGİ BAŞLIĞI
                                    small.text-danger
                                        | Gerekli
                            .body
                                .form-line
                                    input.form-control#name(type="text" name="name" placeholder="Hakkımızda")  
        .row.clearfix
            .col-md-2
                .card.bg-light.text-center
                    .body
                        .form-group
                            label.form-check-label.mb-5 Birincil Bilgi (Sayfada çıkacak ilk bilgi)
                            .form-check.form-switch.d-flex.justify-content-center
                                input.form-check-input.mt-auto.p-2.bd-highlight#isHome(type="checkbox" name="isHome")
            .col-sm-10
                .col-sm-12
                    .card.text-center.bg-blue-grey
                        .header.bg-white
                            h2
                                | AÇIKLAMA                            
                                small.text-danger
                                    | Gerekli
                                small.text-info
                                    | Resim Konulabilir (Resim Ekleme Simgesine Tıklayın > Sunucuya Gözat )
                        .body
                            .form-line
                            textarea.form-control(id="editor" name="description" cols="30" rows="10")
        .form-group.row
            input(type="submit" value="Bilgiyi Kaydet").col-md-12.btn.btn-warning


block script
    script(src="/js/script.js") 