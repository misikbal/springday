extends ../layouts/admin-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 !{errorMessage}
    form(action="/admin/add-slide" method="POST" enctype="multipart/form-data")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)  

        .form-group.row
            label(for="title").col-sm-2.col-form-label Slide Title
            .col-sm-10
                input.form-control#title(type="text" name="title" value=`${inputs.title}`)  
        
        .form-group.row
            label(for="image").col-sm-2.col-form-label Image
            .col-sm-10
                input.form-control-file#slideimg(type="file" name="slideimg") 

        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea.form-control(id="editor" name="description" cols="30" rows="10") #{inputs.description} 
        .form-group.row
            label(for="buttonName").col-sm-2.col-form-label Button Name
            .col-sm-10
                input.form-control#buttonName(type="text" name="buttonName" value=`${inputs.buttonName}`) 
        .form-group.row
            label(for="buttonLink").col-sm-2.col-form-label Button Link
            .col-sm-10
                input.form-control#buttonLink(type="text" name="buttonLink" value=`${inputs.buttonLink}`) 
        .form-group.row
            label(for="animate").col-sm-2.col-form-label Animate
            .col-sm-10
                input.form-control#animate(type="text" name="animate" value=`${inputs.animate}`) 
        .form-group.row
            label(for="isActive").col-sm-2.col-form-label Active
            .col-sm-10
                input.form-control#isActive(type="text" name="isActive" value=`${inputs.isActive}`) 

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Slide").btn.btn-primary

