extends ../layouts/admin-layout.pug
block styles
    link(rel="stylesheet" href="/css/login.css")
    script(src="/plugins/ckeditor/ckeditor.js")


block content
        form(action="/admin/mail" method="POST" enctype="multipart/form-data")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)    
            .row.clearfix
                .col-lg-12.col-md-12.col-sm-12.col-xs-12
                    .form-group.row
                        .card.text-center.bg-blue-grey
                            .header
                                h2.text-white
                                    | E-POSTA AYARLARI
            .form-group.row
                label(for="from").col-sm-2.col-form-label from
                .col-sm-10
                    input(type="text" name="from" value=`${mail.from}`).form-control#from
            .form-group.row
                label(for="title").col-sm-2.col-form-label Title
                .col-sm-10
                    input(type="text" name="title" value=`${mail.title}`).form-control#title
            .form-group.row
                label(for="html").col-sm-2.col-form-label html
                .col-sm-10
                    textarea.form-control(id="editor" name="html" cols="30" rows="10") #{mail.html}              
            .form-group.row
                label(for="properties").col-sm-2.col-form-label properties
                .col-sm-10
                    input(type="text" name="properties" value=`${mail.properties}`).form-control#properties               
            if isAdmin
                .form-group.row
                    input(type="submit" value="Kaydet").btn.btn-warning.col-md-12                  
block script  
    script(src="/js/script.js") 