extends ../layouts/admin-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 !{errorMessage}
    form(action="/admin/add-logo" method="POST" enctype="multipart/form-data")
        input(type="hidden" name="_csrf" value=`${csrfToken}`) 

        .form-group.row
            label(for="logo").col-sm-2.col-form-label logo
            .col-sm-10
                input.form-control-file#logo(type="file" name="logo") 
        .form-group.row
            label(for="favico").col-sm-2.col-form-label favico
            .col-sm-10
                input.form-control-file#favico(type="file" name="favico") 
        .form-group.row
            label(for="footerLogo").col-sm-2.col-form-label footerLogo
            .col-sm-10
                input.form-control-file#footerLogo(type="file" name="footerLogo") 
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Slide").btn.btn-primary

